%h1= t('.title')
%p= link_to t('.new_event'), new_event_path

%table
  %thead
    %tr
      %th= Event.human_attribute_name :lat
      %th= Event.human_attribute_name :lng
      %th= Event.human_attribute_name :address
      %th= Event.human_attribute_name :start_date
      %th= Event.human_attribute_name :start_time
      %th= Event.human_attribute_name :title
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for event in @events
      %tr{ :class => cycle(:odd, :even) }
        %td= event.lat
        %td= event.lng
        %td= event.address
        %td= event.start_date
        %td= event.start_time
        %td= event.title
        %td.action= link_to t('show'), event
        %td.action= link_to t('edit'), edit_event_path(event)
        %td.action= link_to t('destroy'), event, :confirm => t('are_you_sure'), :method => :delete

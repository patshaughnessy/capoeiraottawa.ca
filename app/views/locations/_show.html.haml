#infowindow_content
  .infowindow_actions
    %ul
      -if permitted_to? :edit, @location
        %li
          = link_to t('edit'), edit_location_path(@location), :target => '_parent'
      -if permitted_to? :destroy, @location
        %li
          =link_to t('destroy'), @location, :confirm => I18n.t('locations.confirm_destroy'), :method => :delete


  - content_tag_for :div, @location do
    %p
      =render :partial => 'practice', :collection => @location.practices
    %p
      =@location.name
      = @location.address
      




  
